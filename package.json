{
  "name": "Voracious",
  "description": "A video player for studying foreign languages (esp. Japanese)",
  "version": "0.6.1",
  "author": "Russel Simmons",
  "license": "MIT",
  "repository": "rsimmons/voracious",
  "private": true,
  "dependencies": {
    "diff-match-patch": "^1.0.5",
    "franc": "^5.0.0",
    "iconv-lite": "^0.6.3",
    "immutable": "^4.3.5",
    "jschardet": "^3.0.0",
    "jszip": "^3.10.1",
    "node-abi": "^3.56.0",
    "react": "^17.0.2",
    "react-autosize-textarea": "^7.1.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.4",
    "react-router-scroll-4": "^1.0.0-beta.2",
    "webvtt-parser": "1.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.9",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@types/terser-webpack-plugin": "^5.0.4",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "detect-port": "^1.5.1",
    "electron": "^29.0.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.3",
    "icon-gen": "^4.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "react-refresh": "^0.14.0",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "homepage": ".",
  "main": "app/electron-main.js",
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build-icons": "icon-gen -i docs/logo.svg -o buildResources --favicon-png-sizes 1024 --favicon --favicon-name=icon --ico --ico-name=icon --icns --icns-name=icon",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && npm run build:dll",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never && npm run build:dll",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon --trace-warnings -r ts-node/register/transpile-only .",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts"
  }, 
  "build": {
    "productName": "ElectronReact",
    "appId": "org.erb.ElectronReact",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json",
      "public"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "electron-react-boilerplate",
      "repo": "electron-react-boilerplate"
    }
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  }
}
